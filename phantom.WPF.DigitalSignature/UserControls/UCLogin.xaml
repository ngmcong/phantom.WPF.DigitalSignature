<UserControl x:Class="phantom.WPF.DigitalSignature.UCLogin"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:phantom.WPF.DigitalSignature"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="DIGITAL SIGNATURE MANAGEMENT SYSTEM" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <StackPanel Grid.Row="1" Margin="20">
            <local:WatermarkTextBox Width="200" Margin="0,10,0,0" PlaceHolderText="Username" />
            <local:WatermarkTextBox Width="200" Margin="0,10,0,0" PlaceHolderText="Password" />
            <Button Content="Login" Width="100" Margin="0,20,0,0" Click="LoginButton_Clicked"/>
        </StackPanel>
    </Grid>
</UserControl>