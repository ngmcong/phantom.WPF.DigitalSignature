<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseControlStyle" TargetType="{x:Type Control}">
        <Setter Property="Padding" Value="3"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseControlStyle}"></Style>
    <!--<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseControlStyle}"></Style>-->
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseControlStyle}"></Style>
    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource BaseControlStyle}"></Style>
</ResourceDictionary>